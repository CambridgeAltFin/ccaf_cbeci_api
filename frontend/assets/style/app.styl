// Import Vuetify styling
$body-font-family = 'Exo 2', sans-serif;
$heading-font-family = 'Exo 2', sans-serif;
//$heading-font-family = 'Sorts Mill Goudy';
$headings = {
  h1: { size: 45px, weight: 400, line-height: 48px, letter-spacing: normal, font-family: $heading-font-family },
  h2: { size: 34px, weight: 400, line-height: 40px, letter-spacing: normal, font-family: $heading-font-family },
  h3: { size: 24px, weight: 700, line-height: 32px, letter-spacing: normal, font-family: $body-font-family },
  h4: { size: 18px, weight: 700, line-height: 1, letter-spacing: normal, font-family: $body-font-family },
  h5: { size: 18px, weight: 400, line-height: 1, letter-spacing: .02em, font-family: $body-font-family },
  h6: { size: 16px, weight: 400, line-height: 1, letter-spacing: .02em, font-family: $body-font-family },
  subheading: { size: 16px, weight: 400 },
  body-2: { size: 14px, weight: 500 },
  body-1: { size: 14px, weight: 400 },
  caption: { size: 12px, weight: 400 },
  button: { size: 14px, weight: 500 },
}
@require '~vuetify/src/stylus/app.styl'
